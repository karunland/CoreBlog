@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Userlayout.cshtml";
}

@using EntityLayer.Concrete
@model List<Blog>


<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card my-4">
                            <a href="#">
                                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>  @(@item.BlogCreateDate == default(DateTime) ? "--/--/--" : @item.BlogCreateDate)
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> @(String.IsNullOrEmpty(item.RCategory.CategoryName) ? "aa":@item.RCategory.CategoryName)
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @item.BlogThumbnailImage
                                        </a>
                                    </li>
                                </ul>
                                <h5 class="card-title">
                                    <a href="#">@item.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3">

                                    @(String.IsNullOrEmpty(@item.BlogContent) ? "No Content" : @item.BlogContent.Substring(0, 130))...</p>
                                <a asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->
